<script>
/* DATA */
let products=JSON.parse(localStorage.getItem('products'))||[
  {id:1,name:'Fresh Milk',price:60,cat:'Dairy',img:'https://i.ibb.co/FbrKm9TQ/image.jpg',desc:'Farm fresh'},
  {id:2,name:'Bananas',price:40,cat:'Groceries',img:'https://i.ibb.co/FbrKm9TQ/image.jpg',desc:'1 dozen'},
  {id:3,name:'Potato Chips',price:20,cat:'Snacks',img:'https://i.ibb.co/FbrKm9TQ/image.jpg',desc:'Crispy'},
  {id:4,name:'Cold Drink',price:35,cat:'Beverages',img:'https://i.ibb.co/FbrKm9TQ/image.jpg',desc:'Chilled'}
];

let cart=JSON.parse(localStorage.getItem('cart'))||[];

/* FILTERS */
function buildFilters(){
  let cats=['All',...new Set(products.map(p=>p.cat))];
  const wrap=document.getElementById('filters');
  wrap.innerHTML='';
  cats.forEach(c=>{
    wrap.innerHTML+=`<button onclick="filterCat('${c}',this)">${c}</button>`;
  });
}

let activeCat='All';
function filterCat(c,btn){
  activeCat=c;
  document.querySelectorAll('.filters button').forEach(b=>b.classList.remove('active'));
  btn.classList.add('active');
  render();
}

/* SEARCH */
let query='';
function searchProducts(q){query=q.toLowerCase();render();}

/* RENDER */
function render(){
  const grid=document.getElementById('grid');
  grid.innerHTML='';
  products
    .filter(p=>activeCat==='All'||p.cat===activeCat)
    .filter(p=>p.name.toLowerCase().includes(query))
    .forEach(p=>{
      grid.innerHTML+=`<div class='card'>
        <img loading='lazy' src='${p.img}'>
        <h3>${p.name}</h3>
        <p>${p.desc}</p>
        <div class='price'>â‚¹${p.price}</div>
        <button onclick='add(${p.id})'>Add</button>
      </div>`;
    });
}

/* CART */
function add(id){
  let item=cart.find(i=>i.id===id);
  if(item)item.qty++;
  else cart.push({...products.find(p=>p.id===id),qty:1});
  saveCart();
}
function saveCart(){localStorage.setItem('cart',JSON.stringify(cart));updateCount();}
function updateCount(){document.getElementById('count').innerText=cart.reduce((a,b)=>a+b.qty,0);renderCart();}

function renderCart(){
  const box=document.getElementById('cartItems');box.innerHTML='';
  let total=0;
  cart.forEach(i=>{
    total+=i.price*i.qty;
    box.innerHTML+=`<div class='cart-row'>${i.name} x ${i.qty}
      <span class='qty'>
        <button onclick='chg(${i.id},-1)'>-</button>
        <button onclick='chg(${i.id},1)'>+</button>
      </span>
    </div>`;
  });
  document.getElementById('total').innerText='Total: â‚¹'+total+' (+ â‚¹30 delivery)';
}
function chg(id,d){
  let i=cart.find(x=>x.id===id);
  if(!i)return;
  i.qty+=d;
  if(i.qty<=0)cart=cart.filter(x=>x.id!==id);
  saveCart();
}

/* MODALS */
function openCart(){document.getElementById('cartModal').style.display='flex'}
function closeCart(){document.getElementById('cartModal').style.display='none'}
function checkout(){
  if(!cart.length)return alert('Cart empty');
  document.getElementById('checkoutModal').style.display='flex';
  let sum='Order:\n';let total=0;
  cart.forEach(i=>{sum+=`${i.name} x ${i.qty} = â‚¹${i.price*i.qty}\n`;total+=i.price*i.qty});
  sum+='Total: â‚¹'+(total+30)+' (incl delivery)';
  document.getElementById('summary').value=sum;
}
function closeCheckout(){document.getElementById('checkoutModal').style.display='none'}

/* ADMIN */
function adminLogin(){
  const pass=prompt('Enter admin password');
  if(pass==='1234'){
    const name=prompt('Product name');
    const price=+prompt('Price');
    products.push({id:Date.now(),name,price,cat:'Groceries',img:'https://i.ibb.co/FbrKm9TQ/image.jpg',desc:'New'});
    localStorage.setItem('products',JSON.stringify(products));
    render();
  }
}

/* INIT */
buildFilters();render();updateCount();
</script>
</body>
